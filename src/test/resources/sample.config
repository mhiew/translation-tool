#required
outputDirectory = "./output"

#whether we should overwrite strings when placeholder counts do not match between platforms - optional
blockPlaceholderMismatch = false

#whether to use main android strings file as the base of all translations. - optional
useMainAsBaseAndroidTemplate = false

# The main localization (usually English) - required
main {
    language = "en"
    androidFile =  "values/strings.xml"
    iosFile = "Base.lproj/Localizable.strings"
}

# List of localizations (optional)
localizations = [
    {
        language = "fr"
        androidFile = "values-fr/strings.xml"
        iosFile = "fr.lproj/Localizable.strings"
    },
    {
        language = "fr-CA"
        androidFile = "values-fr-rCA/strings.xml"
        iosFile = "fr-CA.lproj/Localizable.strings"
    }
]